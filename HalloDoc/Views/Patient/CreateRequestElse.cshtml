@model PatientRequestViewModel
@{
    var userModel = ViewBag.userModel as User;
    ViewData["Title"] = "Submit Request for Someone else";
    Layout = "_PatientLayout";
}

<div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-6  d-inline-flex justify-content-between">
        <div class="d-flex">
            <h4 class="h4 mt-5 mb-3">Submit Information</h4>
        </div>
        <div class="d-flex">
            <a class="btn btn-outline-info mt-5 mb-3 ms-auto" asp-action="PatientDashboard" asp-controller="Patient">
                <svg xmlns="http://www.w3.org/2000/svg" width="16"
                     height="16" fill="currentColor" class="bi bi-chevron-left fw-medium mb-1" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg>Back
            </a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6 rounded mb-3" style="box-shadow: 2px 2px 20px rgb(179, 177, 177);">
            <form asp-action="CreateRequestElse" asp-controller="Patient" enctype="multipart/form-data">
                <div class="container-fluid mt-3 p-0">
                    <div class="row">
                        <h6 class="h6 py-3">Patient Information</h6>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" asp-for="Symptoms" placeholder="Symptoms" id="symptoms"
                                style="height: 15vh;"></textarea>
                            <label asp-for="Symptoms" class="text-muted floating-label ms-2">
                                Enter Brief Details of Symptoms
                                (Optional)
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Firstname" class="form-control" id="fname"
                                    placeholder="First Name">
                                <label asp-for="Firstname" class="text-muted floating-label">First Name</label>
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Lastname" class="form-control" id="lname"
                                    placeholder="Last Name">
                                <label asp-for="Lastname" class="text-muted floating-label">Last Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="date" asp-for="DOB" class="form-control" id="dob"
                                    placeholder="Date of Birth">
                                <label asp-for="DOB" class="text-muted floating-label">Date of Birth</label>
                            </div>
                            <h6 class="h6 py-3">Patient Contact Information</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="email" asp-for="Email" class="form-control" id="patientEmail"
                                    placeholder="name@example.com" required>
                                <label asp-for="Email" class="text-muted floating-label">Email address</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <input type="tel" asp-for="Phone" id="phone" class="input w-100 h-100 phone">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h6 class="h6 py-3">Patient Location</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Street" class="form-control" id="street"
                                    placeholder="Street">
                                <label asp-for="Street" class="text-muted floating-label">Street</label>
                                <span asp-validation-for="Street" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="City" class="form-control" id="city" placeholder="City">
                                <label asp-for="City" class="text-muted floating-label">City</label>
                                <span asp-validation-for="City" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="State" class="form-control" id="state" placeholder="State">
                                <label asp-for="State" class="text-muted floating-label">State</label>
                                <span asp-validation-for="State" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Zip" class="form-control" id="zip" placeholder="Zip Code">
                                <label asp-for="Zip" class="text-muted floating-label">Zip Code</label>
                                <span asp-validation-for="Zip" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="RoomNum" class="form-control" id="roomNum"
                                    placeholder="Room #/ Suite (Optional)">
                                <label asp-for="RoomNum" class="text-muted floating-label">Room #/ Suite
                                    (Optional)</label>
                                <span asp-validation-for="RoomNum" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-2 col-4">
                            <button class="btn btn-outline-info"
                                onclick='@Url.Action("https://maps.app.goo.gl/ESACrXuWD9ojL2CL9")'
                                style="height:75%; width:100%">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path
                                        d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                </svg>Map
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h6 class="h6 py-3">Relation</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="relation" asp-for="Relation"
                                    placeholder="Relation">
                                <label  class="text-muted floating-label">Relation with Patient(Optional)</label>
                                <span asp-validation-for="Relation" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="h6 py-3">(Optional) Upload Photo or Document</h6>
                        </div>
                        <div class="d-flex">
                            <label for="fileUpload" class="col d-flex">
                                <div class="col bg-white p-1 ps-3 text-muted border"><span id="infoArea">Select
                                        File</span></div>
                                <div id="btn" class="p-1 btn btn-info">

                                    <i class="bi bi-cloud-arrow-up text-white"></i>
                                    <span style="color:white;" class="ps-1">Upload</span>

                                </div>
                                <input type="file" class="form-control-file" asp-for="File" id="fileUpload"
                                    multiple="multiple" hidden>
                            </label>
                            <span asp-validation-for="File" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row">
                        <div class="d-grid gap-2 my-3 d-md-flex justify-content-md-end">
                            <button class="btn btn-info me-md-2 text-white fw-medium" type="submit">Submit</button>
                            <button class="btn btn-outline-info fw-medium link-info" type="reset">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
