﻿@{
    ViewData["Title"] = "Concierge Reqeust";
}

<div class="container-fluid" style="min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6 justify-content-end">
            <a asp-action="SubmitReq" asp-controller="Home"
               class="float-end my-4 btn btn-outline-info backBtn">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="16" height="16" fill="currentColor" class="bi bi-chevron-left fw-medium mb-1"
                     viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg>Back
            </a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6 rounded mb-3" style="box-shadow: 2px 2px 20px rgb(179, 177, 177);">
            <div class="container-fluid mt-3 p-0">
                <div class="row">
                    <div class="col-12">
                        <h6 class="h6 py-3">Concierge Information</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="concfname" placeholder="Your First Name" required>
                            <label for="concfname" class="text-muted floating-label">Your First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="conclname" placeholder="Your Last Name" required>
                            <label for="conclname" class="text-muted floating-label">Your Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <input type="tel" id="conc_phone" class="input w-100 h-100 phone">
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="concEmail"
                                   placeholder="name@example.com" required>
                            <label for="concEmail" class="text-muted floating-label">Your Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="hotel" placeholder="Hotel/Property Name" required>
                            <label for="hotel" class="text-muted floating-label">Hotel/Property Name</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h6 class="h6 py-3">Concierge Location</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="concstreet" placeholder="Street" required>
                            <label for="concstreet" class="text-muted floating-label">Street</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="conccity" placeholder="City" required>
                            <label for="conccity" class="text-muted floating-label">City</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="concstate" placeholder="State" required>
                            <label for="concstate" class="text-muted floating-label">State</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="conczip" placeholder="Zip Code" required>
                            <label for="conczip" class="text-muted floating-label">Zip Code</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <h6 class="h6 py-3">Patient Information</h6>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" placeholder="Symptoms" id="symptoms"
                                  style="height: 15vh;"></textarea>
                        <label for="symptoms" class="text-muted floating-label ms-2">
                            Enter Brief Details of Symptoms
                            (Optional)
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="fname" placeholder="First Name" required>
                            <label for="fname" class="text-muted floating-label">First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="lname" placeholder="Last Name" required>
                            <label for="lname" class="text-muted floating-label">Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" id="dob" placeholder="Date of Birth" required>
                            <label for="dob" class="text-muted floating-label">Date of Birth</label>
                        </div>
                        <h6 class="h6 py-3">Patient Contact Information</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="patientEmail"
                                   placeholder="name@example.com" required>
                            <label for="patientEmail" class="text-muted floating-label">Email address</label>
                        </div>

                    </div>
                    <div class="col-md-6 col-12">
                        <input type="tel" id="patient_phone" class="input w-100 h-100 phone">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h6 class="h6 py-3">Patient Location</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="roomNum"
                                   placeholder="Room #/ Suite (Optional)">
                            <label for="roomNum" class="text-muted floating-label">Room #/ Suite (Optional)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="d-grid gap-2 my-3 d-md-flex justify-content-md-end">
                        <button class="btn btn-info me-md-2 text-white fw-medium" type="submit">Submit</button>
                        <button class="btn btn-outline-info fw-medium link-info" type="reset">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>