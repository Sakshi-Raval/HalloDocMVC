@{
    Layout = "_AdminLayout";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#home').load('/Admin/AdminDashboardPartial');
            $('#profile').load('/Admin/MyProfileAdminPartial');
            // $('#providers').load('/Admin/ProviderMenuPartial');

            $('.providerDropdownOption').click(function () {
                var optionValue = $(this).attr('value');
                switch (optionValue) {
                    case 'provider':
                        $('#providerOption').addClass('selectedOption');
                        $('#schedulingOption').removeClass('selectedOption');
                        $('#providers').load('/Admin/ProviderMenuPartial');
                        break;
                    case 'scheduling':
                        $('#schedulingOption').addClass('selectedOption');
                        $('#providerOption').removeClass('selectedOption');
                        $('#providers').load('/Admin/MyProfileAdminPartial');
                        break;
                }
                // Change the button behavior to tab
                $('#providerDropdown').attr('data-bs-toggle', 'tab');
                $('#providerDropdown').click();
                $('#providerDropdown').attr('data-bs-toggle', 'dropdown');
            });

           
        });
    </script>
}
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade pt-2 active show" id="home" role="tabpanel" aria-labelledby="home-tab">
        @* @Html.Partial("_AdminDashboardPartial")  *@
    </div>
    <div class="tab-pane fade pt-2" id="providerLocation" role="tabpanel" aria-labelledby="profile-tab">
    </div>
    <div class="tab-pane fade pt-2" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    </div>
    <div class="tab-pane fade pt-2" id="providers" role="tabpanel" aria-labelledby="profile-tab">
    </div>
    <div class="tab-pane fade pt-2" id="partners" role="tabpanel" aria-labelledby="profile-tab">
    </div>
    <div class="tab-pane fade pt-2" id="access" role="tabpanel" aria-labelledby="profile-tab">
    </div>
    <div class="tab-pane fade pt-2" id="records" role="tabpanel" aria-labelledby="profile-tab">
    </div>
</div>